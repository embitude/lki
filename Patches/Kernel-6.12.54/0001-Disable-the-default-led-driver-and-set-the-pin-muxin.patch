From efdfc883f372a61ba8f36b38aef286561bd764fe Mon Sep 17 00:00:00 2001
From: Embitude Trainings <info@embitude.in>
Date: Fri, 6 Feb 2026 20:15:57 +0530
Subject: [PATCH] Disable the default led driver and set the pin muxing for S2

---
 arch/arm/boot/dts/ti/omap/am335x-boneblack.dts | 12 ++++++++++++
 1 file changed, 12 insertions(+)

diff --git a/arch/arm/boot/dts/ti/omap/am335x-boneblack.dts b/arch/arm/boot/dts/ti/omap/am335x-boneblack.dts
index b4fdcf9c0..edf8e92ae 100644
--- a/arch/arm/boot/dts/ti/omap/am335x-boneblack.dts
+++ b/arch/arm/boot/dts/ti/omap/am335x-boneblack.dts
@@ -12,6 +12,10 @@
 / {
 	model = "TI AM335x BeagleBone Black";
 	compatible = "ti,am335x-bone-black", "ti,am335x-bone", "ti,am33xx";
+
+    leds {
+        status = "disabled";
+    };
 };
 
 &cpu0_opp_table {
@@ -26,6 +30,12 @@ opp-1000000000 {
 	};
 };
 
+&nxp_hdmi_bonelt_pins {
+        pinctrl-single,pins = <
+            AM33XX_PADCONF(AM335X_PIN_LCD_DATA2, PIN_INPUT, MUX_MODE7)
+        >;
+};
+
 &gpio0 {
 	gpio-line-names =
 		"[mdio_data]",
@@ -173,3 +183,5 @@ &gpio3 {
 &baseboard_eeprom {
 	vcc-supply = <&ldo4_reg>;
 };
+
+
